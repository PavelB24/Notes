<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_sky"
    android:orientation="vertical"
    tools:context=".NoteEditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/title_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Add title"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="#B2000000"
            android:padding="18dp"
            android:textSize="40dp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/description_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Major text"
            android:textColorHint="#B3000000"
            android:inputType="textMultiLine|text"
            android:padding="@dimen/Edittext_padding"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/title_edittext" />
        <TextView
            android:id="@+id/date_picker_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/description_edittext"
            android:text="Text date of event"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:shadowColor="@color/white"
            android:textColor="#CC040110"/>

        <DatePicker
            android:id="@+id/date_picker_actions"
            app:layout_constraintTop_toBottomOf="@id/date_picker_title_textview"
            style="@style/DatePickerStyle"
            android:theme="@style/DatePickerTheme"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/apply_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#369C27B0"
            android:text="Apply"
            app:layout_constraintTop_toBottomOf="@id/date_picker_actions" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>